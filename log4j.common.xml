<!-- This is the common log4j file. It should contain a logger declaration for
     each logger in gapt sending the messages to nowhere, otherwise it will be
     sent to root and printed to the console. 
     Each programmer should have their own (unversioned) copy of this file 
     (renamed to log4j.xml) and configure which logs they wish to see by changing
     the respective appender.
-->

<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
  <appender name="console" class="org.apache.log4j.ConsoleAppender">
    <param name="Target" value="System.out"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%-5p %c{1} - %m%n"/>
    </layout>
  </appender>

  <appender name="nowhere" class="org.apache.log4j.varia.NullAppender"/>

  <!-- Example of a file appender -->
  <appender name="CutIntroDataLogFile" class="org.apache.log4j.FileAppender">
    <param name="File" value="logs/CutIntroDataLog.txt"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%m%n"/>
    </layout>
  </appender>
  
  <logger name="CutIntroDataLogger" additivity="false">
    <level value="trace"/>
    <appender-ref ref="nowhere"/>
  </logger> 
  
  <logger name="FixSymmetryLogger" additivity="false">
    <level value="trace"/>
    <appender-ref ref="nowhere"/>
  </logger> 

  <logger name="MacroRuleLogger" additivity="false">
